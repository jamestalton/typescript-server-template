{
    "compilerOptions": {
        "target": "ES2019",
        "module": "commonjs",
        "allowJs": false,
        "sourceMap": true,
        "declaration": true,
        "alwaysStrict": false,
        "noUnusedLocals": false,
        "noUnusedParameters": false,
        "noFallthroughCasesInSwitch": true,
        "moduleResolution": "node",
        "noImplicitAny": true,
        "outDir": "./lib",
        "noImplicitUseStrict": true,
        "removeComments": true,
        "lib": [
            "ES2019"
        ]
    },
    "include": [
        "src/**/*.ts"
    ]
}