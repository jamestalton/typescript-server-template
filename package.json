{
    "name": "typescript-server-template",
    "version": "0.0.1",
    "description": "Typescript Server Template",
    "author": "James Talton",
    "license": "UNLICENSED",
    "private": true,
    "repository": {
        "type": "git",
        "url": "https://github.com/jamestalton/typescript-server-template.git"
    },
    "scripts": {
        "build": "tsc --build --clean",
        "test": "npm run eslint && npm run prettier && npm run jest && npm audit",
        "jest": "jest --detectOpenHandles",
        "eslint": "eslint src test --ext .ts --max-warnings=0",
        "prettier": "prettier --check **/*.ts **/*.json **/*.md !coverage/** !lib/** !**/package-lock.json",
        "start": "NODE_ENV=development LOG_LEVEL=debug LOG_COLOR=true PORT=3000 ts-node-dev --no-notify --no-deps --respawn --transpile-only src/main.ts",
        "update": "rm -rf package-lock.json node_modules && npx npm-check-updates -u && npm install && npm audit fix",
        "docker:build": "docker build --pull -t app .",
        "docker:run": "npm run docker:build && docker run -t --name app -p 3000:3000 -e PORT=3000 --rm app"
    },
    "dependencies": {
        "selfsigned": "^1.10.7"
    },
    "devDependencies": {
        "@types/jest": "^24.x.x",
        "@types/node": "^12.x.x",
        "@typescript-eslint/eslint-plugin": "^2.11.0",
        "@typescript-eslint/parser": "^2.11.0",
        "axios": "^0.19.0",
        "eslint": "^6.7.2",
        "eslint-config-prettier": "^6.7.0",
        "eslint-plugin-prettier": "^3.1.1",
        "jest": "^24.x.x",
        "nock": "^11.7.0",
        "prettier": "^1.19.1",
        "ts-jest": "^24.x.x",
        "ts-node": "^8.5.4",
        "ts-node-dev": "^1.0.0-pre.44",
        "typescript": "^3.7.3"
    },
    "prettier": {
        "printWidth": 120,
        "tabWidth": 4,
        "semi": false,
        "singleQuote": true
    },
    "jest": {
        "testEnvironment": "node",
        "transform": {
            "^.+\\.tsx?$": "ts-jest"
        },
        "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
        "collectCoverage": true,
        "coverageThreshold": {
            "global": {
                "branches": 0,
                "functions": 0,
                "lines": 0,
                "statements": 0
            }
        },
        "coverageReporters": [
            "text-summary",
            "html"
        ],
        "collectCoverageFrom": [
            "src/**/*.ts",
            "!**/node_modules/**",
            "!<rootDir>/src/typings.d.ts"
        ],
        "moduleFileExtensions": [
            "ts",
            "tsx",
            "js",
            "jsx",
            "json",
            "node"
        ],
        "setupFiles": [
            "<rootDir>/test/jest-setup.ts"
        ]
    },
    "eslintConfig": {
        "parser": "@typescript-eslint/parser",
        "parserOptions": {
            "ecmaVersion": 2018,
            "sourceType": "module",
            "project": [
                "./tsconfig.json",
                "./test/tsconfig.json"
            ]
        },
        "extends": [
            "eslint:recommended",
            "plugin:@typescript-eslint/eslint-recommended",
            "plugin:@typescript-eslint/recommended",
            "plugin:@typescript-eslint/recommended-requiring-type-checking",
            "prettier/@typescript-eslint",
            "plugin:prettier/recommended"
        ],
        "rules": {
            "@typescript-eslint/no-use-before-define": "off",
            "@typescript-eslint/no-unused-vars": "off",
            "@typescript-eslint/interface-name-prefix": [
                "error",
                {
                    "prefixWithI": "always"
                }
            ],
            "@typescript-eslint/no-floating-promises": [
                "error",
                {
                    "ignoreVoid": true
                }
            ],
            "no-console": "error",
            "no-process-exit": "error"
        }
    }
}
